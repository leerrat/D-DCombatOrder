<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/fond_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/transparent"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:src="@drawable/dnd" />

        <Button
            android:id="@+id/buttonRound"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_button"
            android:padding="12dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="1dp">

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="200dp"
                android:layout_height="61dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/boutonne"
                android:text="Ajoutez Personnage" />

            <Button
                android:id="@+id/buttonRemove"
                android:layout_width="188dp"
                android:layout_height="63dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/boutonne"
                android:text="Retirez Personnage" />
        </LinearLayout>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeView"
            android:layout_width="match_parent"
            android:layout_height="474dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/buttonNextPage"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:text="CrÃ©ez des ennemis"
            android:background="@drawable/boutenne" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:text="Relancez un combat"
            android:background="@drawable/boutenne" />
    </LinearLayout>


</FrameLayout>